<% if (messages.success) { %>
    <div class="bg-secondary/20 text-foreground p-3 px-6 rounded-md inline-block mx-auto text-sm md:text-base">
        <%= messages.success %>
    </div>
    <% } %>
<% if (messages.error) { %>
    <span class=" bg-red-500/20 text-foreground p-3 px-6 rounded-md inline-block mx-auto text-sm md:text-base">
        <%= messages.error %>
    </span>
<% } %>